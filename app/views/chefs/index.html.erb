<%= render 'shared/nav' %>
<%= render 'shared/page_title', title: "All Chefs" %>

<!--nav tabs linking to recipes index and chefs index-->
<ul class="nav nav-tabs">
  <li>
    <%= link_to "Recipes", recipes_path %>
  </li>
  <li class="active">
    <%= link_to "Chefs", chefs_path %>
  </li>
</ul>

<!--Display chefs on page and link to their chef pages-->
<div class="row center">
  <div class="container">
    <% @chefs.each do |chef| %>
      <div class="col-md-4">
        <%= link_to gravatar_for(chef, size: 200), chef_path(chef) %>
        <h5>Chef: <%= chef.chefname %> </h5>
      </div>
    <% end %>
  </div> <!-- .container -->
</div> <!-- .row -->

<!--paginate chefs listing-->
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>