<%= render 'shared/nav' %>
<%= render 'shared/page_title', title: "Log In" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 well form-register">
    
    <%= form_tag '/login' do %>
      <%= label_tag :email %>
      <%= email_field_tag :email %>  <!-- instead of text_field_tag ? --> 
      
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      
      <%= submit_tag 'Login', class: "btn btn-success" %>
      
    <% end %>
  </div>
</div>